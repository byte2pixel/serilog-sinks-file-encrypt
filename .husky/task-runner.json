{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "format-csharpier",
      "command": "dotnet",
      "args": [
        "csharpier",
        "format",
        "${staged}"
      ],
      "include": [
        "**/*.cs",
        "**/*.csx",
        "**/*.csproj",
        "**/*.props",
        "**/*.targets",
        "**/*.xml",
        "**/*.config"
      ]
    }
  ]
}
